<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>mifss-app</artifactId>
        <groupId>com.aeye.mifss</groupId>
        <version>v2026.01</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>mifss-bio</artifactId>
    <packaging>jar</packaging>
    <description>生物识别服务发布包</description>

    <!-- 公共依赖 -->
    <dependencies>
        <dependency>
            <groupId>com.aeye.mifss</groupId>
            <artifactId>mifss-biz-bio</artifactId>
        </dependency>

        <!-- RPC 适配包（所有平台共用） -->
        <dependency>
            <groupId>cn.hsa.hsaf.adapt</groupId>
            <artifactId>hsaf-generic-rpc</artifactId>
            <version>1.1.0</version>
        </dependency>

        <!-- Dubbo -->
        <dependency>
            <groupId>org.apache.dubbo</groupId>
            <artifactId>dubbo-spring-boot-starter</artifactId>
            <version>2.7.3</version>
            <exclusions>
                <exclusion>
                    <groupId>log4j</groupId>
                    <artifactId>log4j</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.apache.dubbo</groupId>
            <artifactId>dubbo-dependencies-zookeeper</artifactId>
            <version>2.7.3</version>
            <type>pom</type>
            <exclusions>
                <exclusion>
                    <groupId>log4j</groupId>
                    <artifactId>log4j</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.aspectj</groupId>
            <artifactId>aspectjweaver</artifactId>
            <version>1.9.7</version>
        </dependency>
    </dependencies>

    <!-- 多云平台 Profile 配置 -->
    <profiles>
        <!-- 开源云 -->
        <profile>
            <id>generic</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <platform.type>generic</platform.type>
                <platform.mainClass>com.aeye.mifss.BioApplication</platform.mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.aeye.mifss</groupId>
                    <artifactId>mifss-adapter-generic</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <!-- 阿里云 -->
        <profile>
            <id>ali</id>
            <properties>
                <platform.type>ali</platform.type>
                <platform.mainClass>com.aeye.mifss.BioApplicationAli</platform.mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.aeye.mifss</groupId>
                    <artifactId>mifss-adapter-ali</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <!-- 腾讯云 -->
        <profile>
            <id>tencent</id>
            <properties>
                <platform.type>tencent</platform.type>
                <platform.mainClass>com.aeye.mifss.BioApplicationTencent</platform.mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.aeye.mifss</groupId>
                    <artifactId>mifss-adapter-tencent</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <!-- 华为云 -->
        <profile>
            <id>huawei</id>
            <properties>
                <platform.type>huawei</platform.type>
                <platform.mainClass>com.aeye.mifss.BioApplicationHuawei</platform.mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.aeye.mifss</groupId>
                    <artifactId>mifss-adapter-huawei</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <build>
        <finalName>mifss-bio-${platform.type}-${project.version}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>2.0.9.RELEASE</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                        <configuration>
                            <mainClass>${platform.mainClass}</mainClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
