<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>mifss-app</artifactId>
        <groupId>com.aeye.mifss</groupId>
        <version>v2026.01</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>mifss-ipt</artifactId>
    <packaging>jar</packaging>
    <description>住院服务发布包</description>

    <dependencies>
        <dependency>
            <groupId>com.aeye.mifss</groupId>
            <artifactId>mifss-biz-ipt</artifactId>
        </dependency>

    </dependencies>

    <profiles>
        <!-- 开源云 -->
        <profile>
            <id>generic</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <platform.type>generic</platform.type>
                <platform.mainClass>com.aeye.mifss.IptApplication</platform.mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.aeye.mifss</groupId>
                    <artifactId>mifss-adapter-generic</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <!-- 阿里云 -->
        <profile>
            <id>ali</id>
            <properties>
                <platform.type>ali</platform.type>
                <platform.mainClass>com.aeye.mifss.IptApplicationAli</platform.mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.aeye.mifss</groupId>
                    <artifactId>mifss-adapter-ali</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <!-- 华为云 -->
        <profile>
            <id>huawei</id>
            <properties>
                <platform.type>huawei</platform.type>
                <platform.mainClass>com.aeye.mifss.IptApplicationHuawei</platform.mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.aeye.mifss</groupId>
                    <artifactId>mifss-adapter-huawei</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <!-- 腾讯云 -->
        <profile>
            <id>tencent</id>
            <properties>
                <platform.type>tencent</platform.type>
                <platform.mainClass>com.aeye.mifss.IptApplicationTencent</platform.mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.aeye.mifss</groupId>
                    <artifactId>mifss-adapter-tencent</artifactId>
                </dependency>
            </dependencies>
        </profile>

    </profiles>

    <build>
        <finalName>mifss-ipt-${platform.type}-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>2.0.9.RELEASE</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                        <configuration>
                            <mainClass>${platform.mainClass}</mainClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
